		</view>
		<view class="add-text-section">
			<view class='text-title'>政府补助费用:</view>
			<input class="item-input-value" placeholder="0" value="{{docgovsubsidies}}" bindinput="inputChangeHandle" data-prop="docgovsubsidies" />
